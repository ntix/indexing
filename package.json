{
  "name": "@ntix/indexing",
  "version": "0.0.0-development",
  "description": "a small text indexer",
  "repository": {
    "url": "https://github.com/ntix/indexing",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "barrels": "barrelsby -q --delete --directory src --include \\.ts$ --exclude \"(\\.spec|this)\\.ts$\" --location all",
    "prebuild": "npm run clean && npm run barrels",
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "build.docs": "npm run build && typedoc --exclude \"**/*+(index|.spec|.e2e).ts\" --out docs src --readme docs.md --media dist",
    "clean": "shx rm -rf dist",
    "format": "eslint src --fix",
    "pretest": "npm run barrels",
    "test": "jest",
    "test.debug": "jest --runInBand",
    "test.watch": "jest --watchAll",
    "start": "npm run build.docs && serve docs",
    "commit": "git add . && npx git-cz",
    "prepublishOnly": "npm run build.docs",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "index",
    "indexing",
    "index builder",
    "search",
    "search indexer"
  ],
  "author": "Anthony Johnston <npm@antix.co.uk> (http://antix.co.uk)",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^0.27.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "barrelsby": "^2.5.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.1",
    "rollup": "^2",
    "semantic-release": "^19.0.5",
    "serve": "^10.1.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": false,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
