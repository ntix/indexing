{
  "name": "@ntix/indexing",
  "version": "0.0.0-development",
  "description": "a small text indexer",
  "repository": {
    "url": "https://github.com/ntix/indexing",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "barrels": "barrelsby -q --delete --directory src --include \\.ts$ --exclude \"(\\.spec|this)\\.ts$\" --location all",
    "prebuild": "npm run clean && npm run barrels && npm run format",
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "build.docs": "npm run build && typedoc --exclude \"**/*+(index|.spec|.e2e).ts\" --out docs src --readme readme.docs.md",
    "clean": "shx rm -rf dist",
    "format": "eslint src --fix",
    "pretest": "npm run barrels",
    "test": "jest",
    "test.coverage": "jest --coverage",
    "test.debug": "jest --runInBand",
    "test.watch": "jest --watchAll",
    "start": "npm run build.docs && serve docs",
    "commit": "git add . && npx git-cz",
    "prepublishOnly": "npm run build.docs",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "index",
    "indexing",
    "index builder",
    "search",
    "search indexer"
  ],
  "author": "Anthony Johnston <npm@antix.co.uk> (http://antix.co.uk)",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@rollup/wasm-node": "^4.55.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "barrelsby": "^2.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~9",
    "jest": "^30.2.0",
    "semantic-release": "^25.0.2",
    "serve": "^14.2.5",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/index.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}